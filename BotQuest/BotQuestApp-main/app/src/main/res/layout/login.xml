<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@drawable/gradient">

        <TextView
                android:text="BotQuest VW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF" app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginTop="30dp" android:textSize="32sp"/>
        <TextView
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#FFFFFF"
                android:textSize="48sp" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="40dp"/>
        <ImageView
                android:src="@drawable/volksbot__paz__1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp"/>
        <EditText
                android:background="@drawable/circular_border_input"
                android:layout_width="333dp"
                android:layout_height="42dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editTextNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/email" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="74dp"
                android:textColor="#000000"/>
        <EditText
                android:background="@drawable/circular_border_input"
                android:layout_width="333dp"
                android:layout_height="42dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextNumber3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/senha" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber" android:layout_marginTop="28dp"
                android:textColor="#000000"/>
        <Button
                android:text="Acessar"
                android:background="@drawable/circular_border_bluebutton"
                android:layout_width="120dp"
                android:layout_height="wrap_content" android:id="@+id/login"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" android:layout_marginTop="40dp"
                android:textColor="#FFFFFF"/>
        <ImageView
                android:src="@drawable/logovw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>